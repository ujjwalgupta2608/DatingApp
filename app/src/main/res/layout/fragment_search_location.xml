<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.fragments.SearchLocationFragment">
        <RelativeLayout
            android:id="@+id/topLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginHorizontal="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_18sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:visibility="visible"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_button"
                android:id="@+id/backButton"/>
            <TextView
                android:id="@+id/title"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_13sdp"
                android:gravity="center"
                android:text="@string/enter_your_location"
                android:textColor="@color/black_mine_shaft"
                android:fontFamily="@font/inter_medium"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/search"
            android:background="@drawable/background_corners_8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/topLayout"
            android:layout_marginHorizontal="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_14sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <fragment
                android:drawableStart="@drawable/search_icon"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:id="@+id/autocomplete_fragment"
                android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment" />
        </RelativeLayout>

        <TextView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/topLayout"
            android:textColor="@color/grey_boulder"
            android:maxLines="1"
            android:visibility="gone"
            android:textColorHint="@color/grey_boulder"
            android:text="Search..."
            android:drawableStart="@drawable/search_icon"
            android:drawablePadding="@dimen/_8sdp"
            android:fontFamily="@font/inter_regular"
            android:paddingVertical="@dimen/_11sdp"
            android:paddingStart="@dimen/_11sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_corners_8dp"
            android:layout_marginHorizontal="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_14sdp"
            android:textSize="@dimen/_9sdp"/>
        <TextView
            app:layout_constraintTop_toBottomOf="@+id/search"
            android:id="@+id/currentLocation"
            android:layout_margin="@dimen/_18sdp"
            android:drawableStart="@drawable/triangle_location_icon"
            android:drawablePadding="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_13sdp"
            android:text="@string/use_my_current_location"
            android:textColor="@color/black_mine_shaft"
            android:fontFamily="@font/inter_medium"
            android:layout_centerInParent="true"/>
        <View
            android:id="@+id/view"
            app:layout_constraintTop_toBottomOf="@id/currentLocation"
            android:layout_marginHorizontal="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_18sdp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_boulder"
            android:alpha="0.2"/>
        <TextView
            app:layout_constraintTop_toBottomOf="@+id/view"
            android:id="@+id/textView1"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginHorizontal="@dimen/_18sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10sdp"
            android:text="@string/search_result"
            android:textColor="@color/grey_boulder"
            android:fontFamily="@font/inter_regular"
            android:layout_centerInParent="true"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_15sdp"
            app:layout_constraintTop_toBottomOf="@id/textView1"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/searchResultRecycler"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"
            tools:listitem="@layout/adapter_location_search"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>