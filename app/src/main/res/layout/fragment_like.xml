<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.fragments.LikeFragment">
        <RelativeLayout
            android:id="@+id/topLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_17sdp"
            android:layout_marginHorizontal="@dimen/_18sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/location"
                android:fontFamily="@font/inter_regular"
                android:textColor="@color/grey_boulder"
                android:textSize="@dimen/_10sdp"/>
            <TextView
                android:id="@+id/locationText"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="@dimen/_75sdp"
                android:layout_below="@id/location"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:drawableStart="@drawable/location_icon"
                android:drawableEnd="@drawable/down_arrow"
                android:drawablePadding="@dimen/_5sdp"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/black_mine_shaft"
                android:textSize="@dimen/_11sdp"/>
            <ImageView
                android:id="@+id/notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/notification_icon"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/usersTypeRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topLayout"
            android:layout_marginTop="@dimen/_18sdp"
            android:layout_marginStart="@dimen/_18sdp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/adapter_habits_and_other_details"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/usersListRecycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/usersTypeRecycler"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"
            android:paddingBottom="@dimen/_50sdp"
            android:clipToPadding="false"
            android:layout_marginTop="@dimen/_18sdp"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            tools:listitem="@layout/adapter_user_in_like"/>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/no_user_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/no_connection_image"/>
            <TextView
                android:layout_gravity="center_horizontal"
                android:id="@+id/no_user_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_user"
                android:fontFamily="@font/inter_regular"
                android:textColor="@color/grey_boulder"
                android:textSize="@dimen/_12sdp"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>