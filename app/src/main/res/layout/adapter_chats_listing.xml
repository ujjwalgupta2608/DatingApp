<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:id="@+id/mainLayout"
        android:background="@drawable/background_corners_8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_6sdp"
        android:layout_marginHorizontal="@dimen/_18sdp">
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/profileCardView"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_8sdp"
            android:layout_width="@dimen/_42sdp"
            android:layout_height="@dimen/_42sdp"
            app:cardCornerRadius="80dp"
            app:strokeWidth="0dp">
            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/image_placeholder"/>
        </com.google.android.material.card.MaterialCardView>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/online_icon"
            android:id="@+id/onlineImage"
            android:layout_marginStart="@dimen/_41sdp"
            android:layout_marginTop="@dimen/_41sdp"/>

        <TextView
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:fontFamily="@font/inter_medium"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/black_mine_shaft"
            android:layout_toEndOf="@id/profileCardView"/>
        <TextView
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:fontFamily="@font/inter_regular"
            android:textSize="@dimen/_9sdp"
            android:textColor="@color/grey_boulder"
            android:text=""
            android:layout_toEndOf="@id/profileCardView"
            android:layout_toStartOf="@id/time"
            android:layout_below="@id/name"/>
        <TextView
            android:maxLines="1"
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            android:fontFamily="@font/inter_regular"
            android:textSize="@dimen/_8sdp"
            android:textColor="@color/grey_boulder"
            android:text="09:10 PM"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_8sdp"
            android:fontFamily="@font/inter_regular"
            android:textColor="@color/white_whisper"
            android:text="2"
            android:background="@drawable/background_round_corners_theme_color"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_6sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:paddingHorizontal="5dp"
            android:paddingVertical="1dp"
            android:id="@+id/messageCount"/>

    </RelativeLayout>
</layout>