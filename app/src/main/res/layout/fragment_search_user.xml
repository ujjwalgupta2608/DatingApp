<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.core.widget.NestedScrollView
        android:background="@color/white"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".views.fragments.SearchUserFragment">
            <RelativeLayout
                android:id="@+id/topLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginHorizontal="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_18sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/back_button"
                    android:id="@+id/backButton"/>
                <TextView
                    android:id="@+id/title"
                    android:layout_marginHorizontal="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_13sdp"
                    android:gravity="center"
                    android:text="@string/search_user"
                    android:textColor="@color/black_mine_shaft"
                    android:fontFamily="@font/inter_medium"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            <EditText
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/topLayout"
                android:textColor="@color/grey_boulder"
                android:maxLines="1"
                android:inputType="text"
                android:id="@+id/search"
                android:textColorHint="@color/grey_boulder"
                android:hint="@{@string/search_user+` ...`}"
                android:drawableStart="@drawable/search_icon"
                android:drawablePadding="@dimen/_8sdp"
                android:fontFamily="@font/inter_regular"
                android:paddingVertical="@dimen/_11sdp"
                android:paddingStart="@dimen/_11sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_corners_8dp"
                android:layout_marginHorizontal="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_14sdp"
                android:textSize="@dimen/_9sdp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:nestedScrollingEnabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/search"
                android:id="@+id/currentSearchRecycler"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/adapter_notification"/>
            <View
                android:layout_marginHorizontal="@dimen/_18sdp"
                android:id="@+id/view"
                app:layout_constraintTop_toBottomOf="@id/currentSearchRecycler"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_boulder"
                android:alpha="0.2"/>
            <TextView
                android:layout_marginStart="@dimen/_18sdp"
                android:id="@+id/searchRecent"
                app:layout_constraintTop_toBottomOf="@id/view"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search_recent"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/grey_boulder"/>
            <androidx.recyclerview.widget.RecyclerView
                android:nestedScrollingEnabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/searchRecent"
                android:id="@+id/recentSearchRecycler"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="vertical"
                tools:listitem="@layout/adapter_notification"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>