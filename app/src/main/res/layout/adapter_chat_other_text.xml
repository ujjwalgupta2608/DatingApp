<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:visibility="gone"
            android:id="@+id/date"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yesterday"
            android:textSize="@dimen/_9sdp"
            android:textColor="@color/grey_boulder"
            android:fontFamily="@font/inter_regular"
            android:layout_marginBottom="@dimen/_13sdp"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_below="@id/date"
            android:layout_marginBottom="@dimen/_12sdp"
            android:background="@drawable/background_sender_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:drawableStart="@drawable/reply_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/replyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/replied_from_story"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_7sdp"
                android:drawablePadding="@dimen/_3sdp"
                android:paddingTop="@dimen/_2sdp"
                android:textSize="@dimen/_9sdp"
                android:textColor="@color/grey_boulder"
                android:fontFamily="@font/inter_regular"/>
            <TextView
                android:gravity="center_vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/replyText"
                android:id="@+id/senderMessage"
                android:maxWidth="@dimen/_170sdp"
                android:minWidth="@dimen/_60sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_6sdp"
                android:paddingTop="@dimen/_6sdp"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/black_mine_shaft"
                android:fontFamily="@font/inter_regular"
                android:includeFontPadding="false"
                android:text="Hii"/>
            <TextView
                app:layout_constraintTop_toBottomOf="@id/senderMessage"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/senderMessage"
                android:layout_alignParentEnd="true"
                android:paddingHorizontal="@dimen/_6sdp"
                android:paddingBottom="@dimen/_6sdp"
                android:textSize="@dimen/_8sdp"
                android:includeFontPadding="false"
                android:textColor="@color/grey_boulder"
                android:alpha="0.6"
                android:fontFamily="@font/inter_regular"
                android:text="09:34 PM"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>
</layout>