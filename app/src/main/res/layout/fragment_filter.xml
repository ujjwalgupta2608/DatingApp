<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:background="@color/white"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.fragments.FilterFragment">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <View
                android:visibility="visible"
                android:layout_gravity="center_horizontal"
                android:alpha="0.3"
                android:id="@+id/view"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_3sdp"
                android:background="@drawable/background_corners_8dp"
                android:backgroundTint="@color/grey_boulder"
                android:layout_marginTop="@dimen/_8sdp"/>
            <RelativeLayout
                android:layout_marginHorizontal="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_18sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/back_button"
                    android:id="@+id/backButton"/>
                <TextView
                    android:id="@+id/title"
                    android:layout_marginHorizontal="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_13sdp"
                    android:gravity="center"
                    android:text="@string/filter"
                    android:textColor="@color/black_mine_shaft"
                    android:fontFamily="@font/inter_medium"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_14sdp"
                android:text="@string/select_city"
                android:textColor="@color/black_mine_shaft"
                android:textSize="@dimen/_10sdp" />
            <RelativeLayout
                android:id="@+id/searchLayout"
                android:background="@drawable/background_corners_8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/topLayout"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginHorizontal="@dimen/_18sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <fragment
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:id="@+id/autocomplete_fragment"
                    android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment" />
            </RelativeLayout>
            <TextView
                android:id="@+id/searchTextview"
                android:visibility="gone"
                android:background="@drawable/background_corners_8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/topLayout"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginHorizontal="@dimen/_18sdp"
                android:padding="@dimen/_9sdp"
                android:drawablePadding="@dimen/_5sdp"
                android:maxLines="1"
                android:ellipsize="end"
                android:drawableEnd="@drawable/down_arrow"
                android:textColor="@color/black_mine_shaft"
                android:text="@string/search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginStart="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_24sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/black_mine_shaft"
                android:text="@string/interested_in"
                android:fontFamily="@font/inter_medium"/>
            <androidx.recyclerview.widget.RecyclerView
                android:nestedScrollingEnabled="false"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:id="@+id/genderRecycler"/>
            <TextView
                android:layout_marginStart="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_24sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/black_mine_shaft"
                android:text="@string/sort_by"
                android:fontFamily="@font/inter_medium"/>
            <androidx.recyclerview.widget.RecyclerView
                android:nestedScrollingEnabled="false"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:id="@+id/sortByRecycler"/>
            <TextView
                android:layout_marginStart="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_24sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/black_mine_shaft"
                android:text="@string/distance"
                android:fontFamily="@font/inter_medium"/>
            <com.google.android.material.slider.RangeSlider
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:id="@+id/distanceSeekbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:valueFrom="0.0"
                android:valueTo="30.0"
                app:thumbColor="@color/theme"
                app:values="@array/distance_slider_values"/>
            <LinearLayout
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_8sdp"
                    android:textColor="@color/grey_boulder"
                    android:fontFamily="@font/inter_regular"
                    android:text="0 km"/>
                <TextView
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_8sdp"
                    android:textColor="@color/grey_boulder"
                    android:fontFamily="@font/inter_regular"
                    android:text="5 km"/>
                <TextView
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_8sdp"
                    android:textColor="@color/grey_boulder"
                    android:fontFamily="@font/inter_regular"
                    android:text="10 km"/>
                <TextView
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_8sdp"
                    android:textColor="@color/grey_boulder"
                    android:fontFamily="@font/inter_regular"
                    android:text="15 km"/>
                <TextView
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_8sdp"
                    android:textColor="@color/grey_boulder"
                    android:fontFamily="@font/inter_regular"
                    android:text="20 km"/>
                <TextView
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_8sdp"
                    android:textColor="@color/grey_boulder"
                    android:fontFamily="@font/inter_regular"
                    android:text="25 km"/>
                <TextView
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_8sdp"
                    android:textColor="@color/grey_boulder"
                    android:fontFamily="@font/inter_regular"
                    android:text="30 km"/>

            </LinearLayout>
            <TextView
                android:layout_marginStart="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_24sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/black_mine_shaft"
                android:text="@string/age"
                android:fontFamily="@font/inter_medium"/>
            <com.google.android.material.slider.RangeSlider
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:id="@+id/ageSeekbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:valueFrom="18.0"
                android:valueTo="60.0"
                app:thumbColor="@color/theme"
                app:values="@array/age_slider_values"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_8sdp"
                    android:textColor="@color/grey_boulder"
                    android:fontFamily="@font/inter_regular"
                    android:text="18"/>
                <TextView
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_8sdp"
                    android:textColor="@color/grey_boulder"
                    android:fontFamily="@font/inter_regular"
                    android:text="24"/>
                <TextView
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_8sdp"
                    android:textColor="@color/grey_boulder"
                    android:fontFamily="@font/inter_regular"
                    android:text="30"/>
                <TextView
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_8sdp"
                    android:textColor="@color/grey_boulder"
                    android:fontFamily="@font/inter_regular"
                    android:text="36"/>
                <TextView
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_8sdp"
                    android:textColor="@color/grey_boulder"
                    android:fontFamily="@font/inter_regular"
                    android:text="42"/>
                <TextView
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_8sdp"
                    android:textColor="@color/grey_boulder"
                    android:fontFamily="@font/inter_regular"
                    android:text="48"/>
                <TextView
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_8sdp"
                    android:textColor="@color/grey_boulder"
                    android:fontFamily="@font/inter_regular"
                    android:text="54"/>
                <TextView
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_8sdp"
                    android:textColor="@color/grey_boulder"
                    android:fontFamily="@font/inter_regular"
                    android:text="60"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/additionalViews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_marginStart="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_24sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/black_mine_shaft"
                    android:text="@string/premium_discovery"
                    android:fontFamily="@font/inter_medium"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:text="@string/my_sexual_orientation"
                    android:textColor="@color/black_mine_shaft"
                    android:textSize="@dimen/_10sdp" />
                <TextView
                    android:id="@+id/sexualOrientation"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:background="@drawable/background_corners_8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_marginHorizontal="@dimen/_18sdp"
                    android:paddingVertical="@dimen/_9sdp"
                    android:paddingHorizontal="@dimen/_12sdp"
                    android:textColor="@color/black_mine_shaft"
                    android:drawableEnd="@drawable/down_arrow"
                    android:drawablePadding="@dimen/_5sdp"
                    android:textSize="@dimen/_10sdp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:text="@string/right_now_i_m_looking_for"
                    android:textColor="@color/black_mine_shaft"
                    android:textSize="@dimen/_10sdp" />
                <TextView
                    android:id="@+id/lookingFor"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:background="@drawable/background_corners_8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_marginHorizontal="@dimen/_18sdp"
                    android:paddingVertical="@dimen/_9sdp"
                    android:paddingHorizontal="@dimen/_12sdp"
                    android:textColor="@color/black_mine_shaft"
                    android:drawableEnd="@drawable/down_arrow"
                    android:drawablePadding="@dimen/_5sdp"
                    android:textSize="@dimen/_10sdp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:text="@string/complexion"
                    android:textColor="@color/black_mine_shaft"
                    android:textSize="@dimen/_10sdp" />
                <TextView
                    android:id="@+id/complexion"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:background="@drawable/background_corners_8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_marginHorizontal="@dimen/_18sdp"
                    android:paddingVertical="@dimen/_9sdp"
                    android:paddingHorizontal="@dimen/_12sdp"
                    android:textColor="@color/black_mine_shaft"
                    android:drawableEnd="@drawable/down_arrow"
                    android:drawablePadding="@dimen/_5sdp"
                    android:textSize="@dimen/_10sdp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:text="@string/what_are_you_into"
                    android:textColor="@color/black_mine_shaft"
                    android:textSize="@dimen/_10sdp" />
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/interestsRecycler"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_marginHorizontal="@dimen/_15sdp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="@dimen/_16sdp"
                android:layout_marginHorizontal="@dimen/_18sdp">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_weight="1"
                    android:id="@+id/resetFilter"
                    style="@style/button"
                    android:backgroundTint="@color/white_whisper"
                    android:textColor="@color/theme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_13sdp"
                    android:text="@string/reset_filter" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_weight="1"
                    android:id="@+id/applyButton"
                    style="@style/button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/apply"/>

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>