<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_5sdp">
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/profileCardView"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_12sdp"
            android:layout_width="@dimen/_33sdp"
            android:layout_height="@dimen/_33sdp"
            app:cardCornerRadius="80dp"
            app:strokeWidth="0dp">
            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/image_placeholder"/>
        </com.google.android.material.card.MaterialCardView>
        <TextView
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_marginTop="@dimen/_14sdp"
            android:fontFamily="@font/inter_medium"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/black_mine_shaft"
            android:text="Leslie Alexander"
            android:layout_toEndOf="@id/profileCardView"/>
        <ImageView
            android:visibility="gone"
            android:id="@+id/callArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_toEndOf="@id/profileCardView"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:src="@drawable/received_call_icon"/>
        <TextView
            android:layout_marginTop="@dimen/_1sdp"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_6sdp"
            android:fontFamily="@font/inter_medium"
            android:textSize="@dimen/_9sdp"
            android:textColor="@color/grey_boulder"
            android:text=""
            android:layout_toEndOf="@id/callArrow"
            android:layout_marginEnd="@dimen/_70sdp"
            android:layout_below="@id/name"/>
        <TextView
            android:layout_marginTop="@dimen/_1sdp"
            android:maxLines="1"
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:fontFamily="@font/inter_medium"
            android:textSize="@dimen/_9sdp"
            android:textColor="@color/grey_boulder"
            android:text="09:10 PM"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/name"/>
        <ImageView
            android:visibility="gone"
            android:id="@+id/crossButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_centerVertical="true"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/cross_button_black"/>
        <View
            android:id="@+id/view"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_below="@id/profileCardView"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white_whisper"/>

    </RelativeLayout>
</layout>