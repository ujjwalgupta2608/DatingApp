<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ShindindiDatingApp" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Terms." parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme</item>
        <item name="colorPrimaryVariant">@color/theme</item>
        <item name="colorOnPrimary">@color/theme</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/theme</item>
        <item name="colorSecondaryVariant">@color/theme</item>
        <item name="colorOnSecondary">@color/theme</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <item name="actionBarStyle">@style/AppTheme.ActionBar1</item>
        Status bar color.
        <item name="android:statusBarColor">@color/white</item>\
    </style>

    <style name="AppTheme.ActionBar1" parent="Widget.AppCompat.Light.ActionBar">
        <item name="android:titleTextStyle">@style/AppTheme.ActionBar.TitleText1</item>
        <item name="titleTextStyle">@style/AppTheme.ActionBar.TitleText1</item>
        <item name="background">@color/white</item>
        <item name="android:height">150dp</item>
        <item name="height">60dp</item>
    </style>

    <style name="AppTheme.ActionBar.TitleText1" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.ShindindiDatingApp" parent="Base.Theme.ShindindiDatingApp" />

    <style name="button">
        <item name="android:background">@drawable/background_button</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:textColor">@color/white_whisper</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="SheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>

        <item name="theme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_peekHeight">500dp</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_bottom_sheet</item>
        <item name="expanded">true</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
    <array name="distance_slider_values">
        <item>0.0</item>
        <item>30.0</item>
    </array>
    <array name="age_slider_values">
        <item>18.0</item>
        <item>60.0</item>
    </array>
</resources>